# Backend environment template
PORT=5000

# MongoDB
MONGODB_URI=REPLACE_WITH_NEW_MONGODB_URI

# Auth
JWT_SECRET=REPLACE_WITH_NEW_STRONG_JWT_SECRET

# Upload limits
MAX_FILE_SIZE=10485760
ALLOW_LOCAL_STORAGE=false

# Client/API
CLIENT_URL=http://localhost:3000
REACT_APP_API_URL=https://uni-share.onrender.com

# Email
EMAIL_SERVICE=gmail
EMAIL_USERNAME=REPLACE_WITH_EMAIL_USERNAME
EMAIL_PASSWORD=REPLACE_WITH_EMAIL_APP_PASSWORD
EMAIL_FROM=REPLACE_WITH_EMAIL_FROM

# GitHub OAuth
GITHUB_CLIENT_ID=REPLACE_WITH_GITHUB_CLIENT_ID
GITHUB_CLIENT_SECRET=REPLACE_WITH_NEW_GITHUB_CLIENT_SECRET
REACT_APP_GITHUB_CLIENT_ID=REPLACE_WITH_GITHUB_CLIENT_ID

# Google OAuth
GOOGLE_CLIENT_ID=REPLACE_WITH_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=REPLACE_WITH_NEW_GOOGLE_CLIENT_SECRET
REACT_APP_GOOGLE_CLIENT_ID=REPLACE_WITH_GOOGLE_CLIENT_ID
GOOGLE_REDIRECT_URI=https://unisharehub.vercel.app/

# Cloudinary (required for persistent file storage)
CLOUDINARY_CLOUD_NAME=REPLACE_WITH_CLOUDINARY_CLOUD_NAME
CLOUDINARY_API_KEY=REPLACE_WITH_CLOUDINARY_API_KEY
CLOUDINARY_API_SECRET=REPLACE_WITH_NEW_CLOUDINARY_API_SECRET
